{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "sourceRoot": "",
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false
    }
}
